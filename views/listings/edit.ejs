<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <body>
            <h3>Edit Your Listing</h3>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
                <div>
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>"><br><br>
                </div>
                <div>
                    <label for="description" class="form-label">Description:</label><br>
                    <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea><br><br>
                </div>
                <div>
                    <label for="image-filename" class="form-label" >Image-Filename:</label>
                    <input type="text" name="listing[image][filename]" class="form-control" value="<%= listing.image.filename %>"><br><br>
                </div>
                <div>
                    <label for="image" class="form-label ">Image-Link:</label>
                    <input type="text" name="listing[image][url]" class="form-control" value="<%= listing.image.url %>"><br><br>
                </div>
                <div>
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>"><br><br>
                </div>
                <div>
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" name="listing[location]" class="form-control" value="<%= listing.location %>"><br><br>
                </div>
                <div>
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>"><br><br>
                </div>
                <div>
                    <label for=""></label>
                    <button type="submit" class="btn btn-dark add-btn col offset-4">Edit</button>
                </div>
            </form>
        </body>
    </div>
</div>
