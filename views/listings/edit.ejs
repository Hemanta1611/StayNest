<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <body>
            <h3>Edit Your Listing</h3>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div>
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="listing[title]" class="form-control" required value="<%= listing.title %>">
                    <div class="invalid-feedback">Title should be valid</div><br><br>
                </div>
                <div>
                    <label for="description" class="form-label">Description:</label><br>
                    <textarea name="listing[description]" class="form-control" required ><%= listing.description %></textarea>
                    <div class="invalid-feedback">Description should be valid</div><br><br>
                </div>
                <div>
                    <label for="image-filename" class="form-label" >Image-Filename:</label>
                    <input type="text" name="listing[image][filename]" class="form-control" required value="<%= listing.image.filename %>">
                    <div class="invalid-feedback">Image Filename should be valid</div><br><br>
                </div>
                <div>
                    <label for="image" class="form-label ">Image-Link:</label>
                    <input type="text" name="listing[image][url]" class="form-control" required value="<%= listing.image.url %>">
                    <div class="invalid-feedback">Image URL/Link should be valid</div><br><br>
                </div>
                <div>
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" name="listing[price]" class="form-control" required value="<%= listing.price %>">
                    <div class="invalid-feedback">Please Enter a Valid Price</div><br><br>
                </div>
                <div>
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" name="listing[location]" class="form-control" required value="<%= listing.location %>">
                    <div class="invalid-feedback">Location should be valid</div><br><br>
                </div>
                <div>
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" name="listing[country]" class="form-control" required value="<%= listing.country %>">
                    <div class="invalid-feedback">Country should be valid</div><br><br>
                </div>
                <div>
                    <label for=""></label>
                    <button type="submit" class="btn btn-dark add-btn col offset-4">Edit</button>
                </div>
            </form>
        </body>
    </div>
</div>
